<project basedir="."
         default="runtests"
         name="runtests">
    <path id="classpath.test">
        <fileset dir="lib">
            <include name="**/*.jar"/>
        </fileset>
        <pathelement location="out/car_showroom"/>
    </path>
    <taskdef name="testng"
             classname="org.testng.TestNGAntTask">
        <classpath>
            <pathelement location="lib/testng-6.14.3.jar"/>
        </classpath>
    </taskdef>
    <target name="runtests">
        <mkdir dir="results"/>
        <testng classpathref="classpath.test" outputdir="results">
            <xmlfileset dir="."
                        includes="src/Tests/testng.xml"/>
        </testng>
    </target>
</project>
